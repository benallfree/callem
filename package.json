{
  "name": "callem",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "lint": "prettier -c ./src/**/*.ts",
    "watch": "tsc -w --preserveWatchOutput",
    "test": "pnpm clean && pnpm build && jest",
    "test:watch": "concurrently 'pnpm watch' 'jest --watchAll'"
  },
  "dependencies": {
    "@types/jest": "^26.0.20",
    "nanoevents": "^5.1.10"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.13",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "jest": {
    "roots": [
      "dist"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "./node_modules/prettier-plugin-organize-imports"
    ]
  }
}
